---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Wie zijn wij</HeaderLink>
      <div class="dropdown">
        <HeaderLink href="/services" class="dropdown-toggle"
          >Onze diensten</HeaderLink
        >
        <div class="dropdown-menu">
          <a href="/services/vertalen">Vertalen</a>
          <a href="/services/tolken">Tolken</a>
          <a href="/services/kwaliteit">Kwaliteit</a>
        </div>
      </div>
      <HeaderLink href="/vca">VCA</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <!-- <HeaderLink href="/contactformulier">Contactformulier</HeaderLink> -->
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    min-width: 160px;
    z-index: 1;
    flex-direction: column;
  }

  .dropdown-menu a {
    padding: 0.75em 1em;
    display: block;
    color: var(--black);
    text-decoration: none;
    white-space: nowrap;
    border-bottom: 1px solid #eee;
  }

  .dropdown-menu a:hover {
    background-color: #f0f0f0;
  }

  .dropdown:hover .dropdown-menu {
    display: flex;
  }
</style>
